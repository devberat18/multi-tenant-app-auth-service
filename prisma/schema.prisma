generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid()) @db.Uuid
  username     String   @unique
  email        String   @unique
  phone_number String   @unique
  password     String
  role         String
  last_login   DateTime @default(now())
  createdAt    DateTime @default(now())

  tokens             Token[]
  passwordResets     PasswordReset[]
  phoneVerifications PhoneVerification[]
  emailVerifications EmailVerification[]

  @@map("users")
}

model Token {
  id     Int    @id @default(autoincrement())
  userId String @map("user_id") @db.Uuid

  refreshToken String @map("refresh_token")

  ip         String?
  userDevice String? @map("user_device")

  createdAt  DateTime  @default(now()) @map("created_at")
  lastUsedAt DateTime  @map("last_used_at")
  expiresAt  DateTime  @map("expires_at")
  revokedAt  DateTime? @map("revoked_at")

  user User @relation(fields: [userId], references: [id])

  @@map("tokens")
}

model PasswordReset {
  id         BigInt   @id @default(autoincrement()) @db.BigInt
  userId     String   @map("user_id") @db.Uuid
  ip         String?
  userDevice String?  @map("user_device")
  token      String   @unique
  tokenUsed  Boolean  @default(false) @map("token_used")
  createdAt  DateTime @default(now()) @map("created_at")
  expiresAt  DateTime @map("expires_at")

  user User @relation(fields: [userId], references: [id])

  @@map("password_reset")
}

model PhoneVerification {
  id        BigInt   @id @default(autoincrement()) @db.BigInt
  userId    String   @map("user_id") @db.Uuid
  otpCode   BigInt   @map("otp_code") @db.BigInt
  codeUsed  Boolean  @default(false) @map("code_used")
  createdAt DateTime @default(now()) @map("created_at")
  expiresAt DateTime @map("expires_at")

  user User @relation(fields: [userId], references: [id])

  @@map("phone_verification")
}

model EmailVerification {
  id        BigInt   @id @default(autoincrement()) @db.BigInt
  userId    String   @map("user_id") @db.Uuid
  otpCode   BigInt   @map("otp_code") @db.BigInt
  codeUsed  Boolean  @default(false) @map("code_used")
  createdAt DateTime @default(now()) @map("created_at")
  expiresAt DateTime @map("expires_at")

  user User @relation(fields: [userId], references: [id])

  @@map("email_verification")
}
